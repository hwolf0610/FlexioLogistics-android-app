<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/rel_item">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_micro"
            android:layout_marginRight="130dp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_normal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_normal">
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Total : 40"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/text_small" />
                <TextView
                    android:id="@+id/tv_packed"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Packed : 29"
                    android:textColor="@color/colorMain"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/lin_nobarcode"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_nobarcode"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />
            </LinearLayout>
            <ImageView
                android:id="@+id/img_manual"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_manual"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"/>
            <ImageView
                android:id="@+id/img_barcode"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_barcode"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_micro"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_right"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_micro"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>