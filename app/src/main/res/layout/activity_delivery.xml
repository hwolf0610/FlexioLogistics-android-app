<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top"
        android:orientation="horizontal"
        android:background="@color/colorLightBlue">
        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="@dimen/height_main"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_back"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Despacho"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_x_large"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/lin_back"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_inventory"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_normal"
                android:src="@drawable/ic_inventory_1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="160dp">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_large"
                    android:textColor="@color/colorMain"
                    android:layout_marginTop="@dimen/margin_normal"/>
                <TextView
                    android:id="@+id/tv_subname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/colorGray"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:layout_marginRight="80dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/img_manual"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_manual"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/img_barcode"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_barcode"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="110dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item List:"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/colorMain"
                android:layout_marginTop="@dimen/margin_micro"
                android:layout_marginLeft="@dimen/margin_normal"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_delivery_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_micro">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_main"
                android:text="Cancelar"
                android:textSize="@dimen/text_large"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bkg_round_green"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_micro"/>
            <TextView
                android:id="@+id/tv_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_main"
                android:text="Guardar"
                android:textSize="@dimen/text_large"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bkg_round_green"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_micro"/>
            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_main"
                android:text="Crear"
                android:textSize="@dimen/text_large"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bkg_round_green"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_micro"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>