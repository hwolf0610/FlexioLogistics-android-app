<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bkg_manual"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium"
    android:layout_margin="@dimen/margin_normal"
    android:gravity="center">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter amount packed for &lt;23432432432&gt; :"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_large"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edt_packed"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_xx_large"
        android:hint="Packed"
        android:gravity="center"
        android:background="@drawable/bkg_manual_packed"
        android:layout_marginTop="@dimen/margin_medium"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/tv_continue"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Continue"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_x_large"
        android:gravity="center"
        android:background="@drawable/bkg_round_green"
        android:layout_marginTop="@dimen/margin_medium" />
</LinearLayout>